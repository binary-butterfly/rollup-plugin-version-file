{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "Node",
    "lib": ["dom", "es2015"],
    "skipLibCheck": true
  },
  "include": [
    "./src/*",
  ]
}
